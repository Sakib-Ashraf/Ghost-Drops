/* slick scrollbar end */



/* responsive */
@media (min-width: 768px) {  
    .text-image-slider.slick-initialized .slick-track {
        margin-left: -48px;
    }
    .text-image-block-inner {
        width: 470px;
    }    
    .text-image-slider.slick-initialized .slick-slide {
        margin: 0 !important;
        margin-left: 48px !important;
        width: 470px !important;
    }
}

@media (max-width: 991px) {
    .resgister-text-image-section {
        margin-top: 60px;
    }
    .register-text-img-section-heading {
        margin-bottom: 50px;
    }
}

@media (max-width: 767px) {
    .register-text-img-section-heading {
        margin-bottom: 40px;
    }
    .text-image-subheading {
        display: none;
    }
    .text-image-heading, 
    .text-image-heading a {
        font-size: 36px;
    }
    .text-image-block-img {
        min-height: 1px;
    }
    .text-image-block-inner {
        padding: 30px 20px 20px;
    }
    .resgister-text-image-section {
        margin-top: 0;
    }
    .slick-progress-wrapper {
        margin-top: 60px;
    }    
    .text-image-slider.slick-initialized .slick-track {
        margin-left: -30px;
    }
    .text-image-block-inner {
        width: 310px;
    }    
    .text-image-slider.slick-initialized .slick-slide {
        margin: 0 !important;
        margin-left: 30px !important;
        width: 310px !important;
    }    
    .text-image-block {
        background: url('rectangle-mobile.png');
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }
}

@media (max-width: 601px) {
    .register-text-img-section-heading {
        margin-bottom: 48px;
    }
    .slick-progress-wrapper {
        max-width: 60%;
    }
}

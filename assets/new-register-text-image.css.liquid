.register-text-img-section-heading {
    margin-bottom: 53px;
    line-height: 100px;
    height: 105px;
}
.text-image-heading {
    font-family: 'RBNo3.1-Bold';
    font-weight: 450;
    font-size: 49px;
    line-height: 1.1;
    color: #FFFFFF;
    margin: 0;
}
.text-image-heading {
    margin-top: 20px;
}
.text-image-subheading {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 16px;
    line-height: 1.8;    
    color: #FFFFFF;
    margin-bottom: 0 !important;
    margin-top: 20px;
}
.text-image-block {
    background: url('rectangle-desktop.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    height: 100%;
}
.swiper-horizontal {
    height: 539px;
}
.text-image-block-inner {
    padding: 49px 38px 42px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    height: 100%;
}
.text-image-block-img {
    display: flex;
    justify-content: center;
    align-items: center;
    max-height: 185px;
    height: 100%;
    max-width: 300px;
    width: 100%;
}
.text-image-block-content {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
.text-image-block-img img {
    height: 100%;
    width: 290px;
    max-width: 100%;
    object-fit: contain;
}
.resgister-text-image-section {
    margin-top: 136px;
    overflow: hidden;
}
.text-image-block-img {
    margin-top: 40px;
    margin-bottom: 40px;
    transition: 0.4s ease;
}
/* swiper css */
:root {
    --swiper-scrollbar-border-radius: 10px;
    --swiper-scrollbar-top: auto;
    --swiper-scrollbar-bottom: -80px;
    --swiper-scrollbar-left: auto;
    --swiper-scrollbar-right: 4px;
    --swiper-scrollbar-sides-offset: 36%;
    --swiper-scrollbar-bg-color: #EAEAEA;
    --swiper-scrollbar-drag-bg-color: #E62877;
    --swiper-scrollbar-size: 5px;
}
.swiper, swiper-container {
    overflow: visible;
    cursor: grabbing;
}
.swiper_scrollbar {
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
}
/* swiper css */

/* responsive */
@media (max-width: 1540px) {  
    .text-image-heading {
        font-size: 45px;
    }
}
@media (min-width: 769px) {  
    .resgister-text-image-section {
        height: 755px;
    }
    .text-image-block {
        transition: transform 0.4s ease;
    }
    .text-image-block:hover {
        transform: translateY(-30px) !important;
        transition: transform 0.4s ease;
        filter: drop-shadow(-9px 8px 18px rgba(171, 171, 171, 0.2));
    }    
    .text-image-block-inner {
        padding: 36px 38px 20px 38px;
        overflow: hidden;
        transition: 0.4s ease;
    }
    .text-image-subheading {
        display: none;
        opacity: 0;
        visibility: hidden;
        height: 0;
        transition: 0.4s ease;
        -webkit-animation: slide-in-bottom 0.4s ease;
	        animation: slide-in-bottom 0.4s ease;
    }
    .text-image-block:hover .text-image-subheading {
        display: block;
        opacity: 1;
        visibility: visible;
        height: 100%;
        margin-top: 20px;
        -webkit-animation: slide-in-bottom 0.4s ease;
	        animation: slide-in-bottom 0.4s ease;
    }
    .text-image-block:hover .text-image-block-img {
        margin-top: 15px;
        margin-bottom: 15px;
        transition: 0.4s ease;
    }
    .text-image-heading {
        transition: 0.4s ease;
    }
    .text-image-block:hover .text-image-heading {
        transition: 0.4s ease;
    }
}

@media (max-width: 991px) {
    .resgister-text-image-section {
        margin-top: 60px;
    }
    .register-text-img-section-heading {
        margin-bottom: 50px;
    }
}

@media (max-width: 767px) {
    .resgister-text-image-section {
        height: 690px;
    }
    .register-text-img-section-heading {
        margin-bottom: 40px;
    }
    .text-image-heading, 
    .text-image-heading a {
        font-size: 36px;
    }
    .text-image-block-img {
        max-height: 142px;
    }
    .resgister-text-image-section {
        margin-top: 0;
    }
    .text-image-block {
        background: url('rectangle-mobile.png');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        transition: 0.3s ease;
    }
    .text-image-subheading {
        display: none;
    }  
    .text-image-block-inner {
        padding: 36px 38px 20px 38px;
    }
}

@media (max-width: 601px) {
    :root {
        --swiper-scrollbar-sides-offset: 13%;
    }
    .text-image-block {
        margin-left: 0px;
        margin-right: 0px;
    }
    .register-text-img-section-heading {
        margin-bottom: 48px;
    }
    .text-image-block {
        height: 459px;
    }
    .resgister-text-image-section {
        height: 666px;
    }
}
@media screen and (max-width: 380px) {
    .text-image-block {
        height: 435px;
    }
}
@media screen and (max-width: 325px) {
    .text-image-block {

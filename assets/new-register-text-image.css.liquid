.register-text-img-section-heading {
    margin-bottom: 70px;
}
.text-image-heading,
.text-image-heading a {
    font-family: 'rbno3.1black';
    font-weight: 450;
    font-size: 38px;
    line-height: 1.1;
    color: #FFFFFF;
    margin: 0;
}
.text-image-heading {
    margin-top: 20px;
}
.text-image-subheading {
    font-family: 'Montserrat';
    font-weight: 600;
    font-size: 16px;
    line-height: 1.8;    
    color: #FFFFFF;
    margin-bottom: 0 !important;
    margin-top: 20px;
}
.text-image-block {
    background: url('rectangle-desktop.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    height: 100%;
}
.text-image-block-inner {
    padding: 49px 30px 42px;
}
.text-image-block-img {
    min-height: 280px;
    display: flex;
    justify-content: center;
}
.text-image-block-img img {
    width: auto;
    max-width: 100%;
}
.resgister-text-image-section {
    margin-top: 131px;
    overflow: hidden;
}
.slick-progress {
    display: block;
    width: 100%;
    height: 5px;
    border-radius: 5px;
    overflow: hidden;    
    background-color: #EAEAEA;
    background-image: linear-gradient(to right, #E62877, #E62877);
    background-repeat: no-repeat;
    background-size: 50% 100%;    
    transition: background-size .4s ease-in-out;
}
.slick-progress-wrapper {
    max-width: 412px;
    margin: 80px auto 0;
}
.text-image-slider.slick-initialized .slick-track {
    display: flex !important;
    margin-left: -20px;
    padding-right: 5%;
}
.text-image-slider.slick-initialized .slick-slide {
    display: flex !important;
    height: inherit;
}
.text-image-slider .slick-list {
    overflow: visible;
}

/* responsive */
@media (max-width: 1100px) {
    .slick-progress-wrapper {
        display: none;
    }
}

@media (max-width: 991px) {
    .resgister-text-image-section {
        margin-top: 60px;
    }
    .register-text-img-section-heading {
        margin-bottom: 50px;
    }
}

@media (max-width: 767px) {
    .register-text-img-section-heading {
        margin-bottom: 40px;
    }
    .text-image-subheading {
        display: none;
    }
    .text-image-heading, 
    .text-image-heading a {
        font-size: 36px;
    }
    .text-image-block-img {
        min-height: 1px;
    }
    .text-image-block-inner {
        padding: 30px 20px 20px;
    }
    .resgister-text-image-section {
        margin-top: 0;
    }
}

@media (max-width: 601px) {
    .register-text-img-section-heading {
        margin-bottom: 24px;
    }
}

        },
        {
        "id":"heading_2",
        "type":"textarea",
        "label":"Heading 2",
        "default":"WE'RE NOT JUST IN THIS GAME, WE'RE CHANGING THE WAY IT'S PLAYED"
        }
	],
    "blocks": [
     
    ],
    "presets": [{
      "name": "All Star Banner",

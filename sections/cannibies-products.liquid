<div class="container-fluid">
      <div class="row">
        {% for block in section.blocks %}
         <div class="col-lg-4">
            <div class="{%if forloop.index==1%}cat-bx-one{%elsif forloop.index==2%}cat-bx-two{%elsif forloop.index==3%}cat-bx-three{%endif%}">
        
              <a href="{{block.settings.btn_link}}" class="bk-url">
               <img src="{{block.settings.image | img_url :'600x570'}}" alt="" class="prod" />
              </a>
               
            </div>
                 <a href="{{block.settings.btn_link}}" class="bk-url">
               <h3>{{block.settings.heading}}</h3>
              </a>
            <p  class="lrg">{{block.settings.content}}</p>
           <a href="{{block.settings.btn_link}}" class="see-more-link">{{block.settings.btn_label}}</a>
           
         </div>
        {%endfor%} 
      </div>
 </div>
{% schema %}
  {
    "name": "Cannabies Product",
    "settings": [
	 
	],
    "blocks": [
     {
      "type": "image",
      "name": "image",
      "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "600x 570px recommended"
        },
  		{
        "type": "textarea",
        "id": "heading",
        "label": "Heading",
        "default": "First Class Funk"
       },
       {
        "type": "textarea",
        "id": "content",
        "label": "Paragraph",
        "default": "A powerhouse bud with a one-of-a-kind heavyweight high, <b>First Class Funk tastes as funky as it smells.</b>"
       },

 
	  {
        "type": "text",
        "id": "btn_label",
        "label": "Button Text",
        "default": "See more"
      },
	  {
        "type": "url",
        "id": "btn_link",
        "label": "Button link"
      }
	  
      ]
     }
    ],
    "presets": [{
      "name": "Cannabies Product",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}


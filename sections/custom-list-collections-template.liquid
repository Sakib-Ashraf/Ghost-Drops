<div class="inner-collect-bg">
<div class="container-fluid ">
<div class="scp-breadcrumb d-none">
    <ul class="breadcrumb ">
        <li><a href="#">Ghost Gear</a></li>
        <li class="active">All Clothing</li>
    </ul>
</div>	
</div>

<h2 class="main-heading top-ex-spc">
  {{section.settings.col-title}}
 </h2>	
</div>	
<section class="clothing-collection">
  {%- for block in section.blocks -%}
	<div class="container-fluid clearfix">
		<div class="heading-handler">
			<div class="row">
				<div class="col-8">
                
                  <h3>{{ collections[block.settings.collection].title }}</h3>

				</div>
				<div class="col-4">
					<a href="{{block.settings.link}}" class="primary-btn fl-rt">{{block.settings.btn-title}}</a>
				</div>
			</div>
		</div>
		<div class="box-spc">
			<div class="row">
              {%- for product in collections[block.settings.collection].products -%}
                 
				{% include 'custom-collection-grid', product: product,collection:collection %}
				{%endfor%}	
			</div>
		</div>
		</div>
  {%endfor%}
</section>


{% schema %}
{
   "name": "Collection Page",
   "settings": [
      {
      "type": "text",
      "id": "col-title",
      "default": "All Clothing",
      "label": "Title"
      }
      
      
      
   ],
   "blocks": [
      {
         "type": "collection",
         "name": "Collection",
         "limit": 12,
         "settings": [
            {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
            },
            {
            "type": "text",
            "id": "btn-title",
            "default": "See All",
            "label": "Button Title"
            },
            {
            "type": "url",
            "id": "link",
            "label": "see more link"
            }

         ]
      }
   ],
   "presets": [
      {
      "name": "Collection Page",
      "category": "Carousel Sections"
      }
   ]
}
{% endschema %}
<section class="our-missiom">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<div class="left-mission">
					<h2>{{section.settings.heading_1}} </h2>
					<p>{{section.settings.heading_2}}</p>
					<h2>{{section.settings.heading_3}}</h2>
					<p>{{section.settings.heading_4}}</p>
				</div>
			</div>
			<div class="col-md-6">
				<div class="mission-img">
                  <img src="{{section.settings.img_desktop | img_url:'680x500'}}" alt="" class="w-100" />
              </div>
			</div>
		</div>
	</div>
</section>
{% schema %}
  {
    "name": "Drive Us Mission section",
    "settings": [

        "id": "img_desktop",
        "label": "Image",
        "info": "680 x500px recommended"
        },
        
        {
        "id":"heading_1",
        "type":"textarea",
        "label":"Heading 1",
        "default":"Our <span>vision</span>"
        },
        {
        "id":"heading_2",
        "type":"textarea",
        "label":"Heading 2",
        "default":"Passionately crafting cannabis + Proudly building community + Fearlessly challenging opinions<b>= Radically transforming culture.</b>"
        },
        {
        "id":"heading_3",
        "type":"textarea",
        "label":"Heading 3",
        "default":"Our <span>mission</span>"
        },
        {
        "id":"heading_4",
        "type":"textarea",
        "label":"Heading 4",
        "default":"To shape a more equitable and flavourful future for the cannabis community in Canada <b>by innovating, educating, and pushing boundaries.</b> "
        },
        {
        "id":"btn_label",
        "type":"text",
        "label":"Button Label",
        "default":"Read the Ghost Story"
        },
        {
        "id":"btn_link",
        "type":"url",
        "label":"Button Link"
        },
        {
        "id":"content",
        "type":"textarea",
        "label":"Content",
        "default":"The best cannabis used to be in the legacy market â€“ <b>not anymore.</b>"
        }
	],
    "blocks": [

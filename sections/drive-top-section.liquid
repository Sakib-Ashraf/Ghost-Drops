<section class="ghost-cat drives">
  <div class="container-fluid">
    <div class="scp-breadcrumb mt-0 mb-5">
            <ul class="breadcrumb wht-bdd mt-0">
              <li><a href="/pages/ghost-story">Ghost Story</a></li>
              <li class="active">{{ page.title }}</li>
            </ul>
          </div>
  </div>
  <h1 class="text-flicker-in-glow">{{section.settings.heading}}</h1>
  <h5>{{section.settings.heading2}}</h5>
  <p>{{section.settings.content}}</p>
</section>

{% schema %}
  {
    "name": "Drive Us top section",
    "settings": [
	    
        {
        "id":"heading",
        "type":"text",
        "label":"Heading",
        "default":"What drives us"
        },
        {
        "id":"heading2",
        "type":"textarea",
        "label":"Heading 2",
        "default":"CANNABIS THAT <br class='mob-view'>CHANGES EVERYTHING "
        },
        {
        "id":"content",
        "type":"textarea",
        "label":"Paragraph",
        "default":"We aren’t just in the game — <b>we’re changing the way it’s played.</b>"
        }
	],
    "blocks": [
     
    ],
    "presets": [{
      "name": "Drive Us top section",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}




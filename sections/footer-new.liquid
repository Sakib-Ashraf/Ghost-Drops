{%if template!='customers/login'%}
<footer {%if template=='page.where-to-buy'%} class="new-space"{%endif%}>
  <div class="container-fluid">
    <ul class="footer-list clearfix">
					<li><a href="{{shop.url}}">
						<img src="{{ section.settings.logo | img_url: 'original' }}" class="footer-logo">
						</a>
					</li>
                	<li>
					<h5>{{linklists[section.settings.footer_menu1].title}}</h5>
					<ul class="list-a">
                        {% for link in linklists[section.settings.footer_menu1].links %}
				
						<li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                       {% endfor %}
                      </ul>
					</li>
                   <li>
					<h5>{{linklists[section.settings.footer_menu2].title}}</h5>
					<ul class="list-a">
                        {% for link in linklists[section.settings.footer_menu2].links %}
				
						<li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                       {% endfor %}
                      </ul>
					</li>
                    <li>
					<h5>{{linklists[section.settings.footer_menu3].title}}</h5>
					<ul class="list-a">
                        {% for link in linklists[section.settings.footer_menu3].links %}
				
						<li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                       {% endfor %}
                      </ul>
					</li>
                    <li>
					<h5>{{linklists[section.settings.footer_menu4].title}}</h5>
					<ul class="list-a">
                        {% for link in linklists[section.settings.footer_menu4].links %}
                          
				
						<li><a href="{{ link.url }}">{%- if link.title == "Download Investor Deck" -%}Download <br>Investor Deck{%- else -%}{{ link.title | escape }}{%- endif -%}</a></li>
                       {% endfor %}
                      </ul>
					</li>
             	    <li>
<!-- 						<h5>Follow us</h5> -->
						<ul class="social-bar">
                            <li><a href="{{section.settings.in_link}}" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
							<li><a href="{{section.settings.yt_link}}" target="_blank"><i class="fa fa-youtube-play" aria-hidden="true"></i></a></li>
							<li><a href="{{section.settings.fb_link}}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                          	<li  class=""><a href="{{section.settings.tw_link}}" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
							<li class=""><a href="{{section.settings.li_link}}" target="_blank"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
						</ul>
					</li>
				</ul>
              <ul class="bottom-links">
                
                {% for link in linklists[section.settings.footer_bottom].links %}
                <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                {%endfor%}
               

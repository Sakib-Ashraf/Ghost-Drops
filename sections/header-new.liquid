        "default": "main-menu"
      },
      {
        "type": "url",
        "id": "yt_link",
        "label": "Youtube link for mobile",
        "info":"https://www.youtube.com/shopify"
      },
      {
        "type": "url",
        "id": "fb_link",
        "label": "Facebook link for mobile",
        "info":"https://www.facebook.com/shopify"
      },
      {
        "type": "url",
        "id": "in_link",
        "label": "Instagram link for mobile",
        "info":"https://www.instagram.com/shopify"
      },
      {
        "type": "url",
        "id": "li_link",
        "label": "Linkedin link for mobile",
        "info":"https://www.linkedin.com/shopify"
      },
      {
        "type": "url",
        "id": "tw_link",
        "label": "Twitter link for mobile",
        "info":"https://www.twitter.com/shopify"
      }
    ]
  }
{% endschema %}

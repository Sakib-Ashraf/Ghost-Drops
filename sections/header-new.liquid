    "name": "Header New",
    "settings": [
      
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Site Logo"
      },
      {
        "type": "image_picker",
        "id": "logo_trans",
        "label": "Black Logo"
      },
      {
        "type": "link_list",
        "id": "main_menu",

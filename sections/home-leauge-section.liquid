<section class="home-leauge">
    <div class="container-fluid">
    <div class="row">
    <div class="col-md-6">
    <div class="league-sec">
    <h3>{{ section.settings.main_heading }}</h3>
      <img src="{{section.settings.img | img_url:'master'}}" class="league-lg mob-view">
    <p>{{ section.settings.content }}</p>
    <a href="{{ section.settings.btn_link }}" class="primary-btn">{{ section.settings.btn_label }}</a>
    </div>
    </div>
    <div class="col-md-6 dsk-view">
    <img src="{{section.settings.img | img_url:'master'}}" class="league-lg">
    
    </div>
    </div>
    </div>

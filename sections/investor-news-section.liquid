<section class="ghost-meet insvtwq">
  <div class="container-fluid">
          <div class="drop-block drop-white">
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="4000" data-drop-width="36" data-drop-height="180" style="width: 36px; height: 180px; transition: all 4s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="2000" data-drop-width="30" data-drop-height="260" style="width: 30px; height: 260px; transition: all 2s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="3000" data-drop-width="30" data-drop-height="200" style="width: 30px; height: 200px; transition: all 3s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="1000" data-drop-width="40" data-drop-height="330" style="width: 40px; height: 330px; transition: all 1s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="2000" data-drop-width="30" data-drop-height="280" style="width: 30px; height: 280px; transition: all 2s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="4000" data-drop-width="30" data-drop-height="220" style="width: 30px; height: 220px; transition: all 4s ease 0s;"></div>
         <div class="drop-water drop-init drop-slide" data-drop="fade-down" data-drop-time="3000" data-drop-width="40" data-drop-height="260" style="width: 40px; height: 260px; transition: all 3s ease 0s;"></div>
      </div>
    <div class="row">
      <div class="col-md-9"><h2 class="gd-news">{{section.settings.main_title}}</h2></div>
      <div class="col-md-3"><a href="{{section.settings.btn_link}}" class="primary-btn mt-exa dsk-view" >{{section.settings.btn_label}}</a></div>
    </div>
     
  <div class="row">
    {%for block in section.blocks%}
    <div class="col-md-4">
      <div class="brick">
        <div class="brick-img-o">
           
       
          
          <a href="{{block.settings.label_link}}" target="_blank">
          <div class="overlay-brick"></div>
           
              <img src="{{block.settings.image | img_url:'880x560'}}" alt="" class="w-100" /></a>
          
          
          
      
        </div>
        
      
        <a href="{{block.settings.label_link}}" target="_blank"><h4>{{block.settings.title}}</h4></a>  
        
        
          <p>{{block.settings.content}}</p>
          <a href="{{block.settings.label_link}}">{{block.settings.label_read}}</a>
      </div>
      </div>
    {%endfor%}
  </div>
   <a href="{{section.settings.btn_link1}}" class="primary-btn mt-exa mob-view" target="_blank">{{section.settings.btn_label1}}</a>
    <div class="position-relative">
      {{section.settings.bottom_heading}}
<!--     <img src="//cdn.shopify.com/s/files/1/0607/7104/1503/t/5/assets/smily-cross.png?v=5005632475727772231" alt="" class="smill-shape"> -->
    </div>
 </div>
</section>

{% schema %}
  {
    "name": "Investor news link",
    "settings": [
	  {
        "type": "textarea",
        "id": "main_title",
        "label": "Main Title",
        "default": "Ghost Drops in the News"
       },
       {
        "type": "text",
        "id": "btn_label",
        "label": "Button Text",
        "default": "Read about our All-Stars"
      },
	  {
        "type": "url",
        "id": "btn_link",
        "label": "Button link"
      },
       {
        "type": "textarea",
        "id": "bottom_heading",
        "label": "Bottom Heading",
        "default": "<h3>Meet<br class='mob-view'> the team<br class='mob-view'><br class='dsk-view'> behind<br class='mob-view'> the Ghost</h3><a href='/pages/ghost-crew' class='primary-btn'>The Ghost Grew</a>"
       },
       {
        "type": "url",
        "id": "prd_link",
        "label": "Product link"
      },
       {
        "type": "text",
        "id": "btn_label1",
        "label": "Bottom Button Text",
        "default": "The Ghost Grew"
      },
	  {
        "type": "url",
        "id": "btn_link1",
        "label": "Bottom Button link"
      }
	],
     "blocks": [
      {
         "type": "image",
         "name": "image",
         "settings": [
            
            {
            "type": "text",
            "id": "title",
            "label": "News Title"
            },
            {
            "type": "textarea",
            "id": "content",
            "label": "News Content"
            },
            {
            "type": "text",
            "id": "label_read",
            "label": "Read more text",
            "default":"Read More"
            },
            {
            "type": "url",
            "id": "label_link",
            "label": "Read more link"
            },
            {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "880x 560px recommended"
            }

         ]
      }
   ]
  }
{% endschema %}


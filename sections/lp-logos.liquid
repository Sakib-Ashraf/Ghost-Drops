{% if section.settings.heading !=blank %}
<h2 class="mt-0 mb-4">{{section.settings.heading}}</h2>
{% endif %}
<ul class="two-logosz clearfix">
  {% for block in section.blocks %}
     <li><a href="{{block.settings.btn_link}}"><img src="{{block.settings.logo | img_url:'master'}}"></a></li>
  {%endfor%} 
</ul>

{% schema %}
  {
    "name": "LP logo",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "LP/Distribution"
      }  
	],
    "blocks": [  
      {
      "type": "image",
      "name": "image",
      "settings": [
        
  		{
        "type": "image_picker",
        "id": "logo",
        "label": "Logos",
        "info": "680x 500px recommended"
        },
        {
        "type": "url",
        "id": "btn_link",
        "label": "Logo link"
      }
      ]
     }
    ],

    "presets": [{
      "name": "LP logo",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}
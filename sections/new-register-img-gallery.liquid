{{ 'new-register-img-gallery.css' | asset_url | stylesheet_tag }}


<div class="resgister-gallery-section">
    <div class="container-fluid">
        <div class="register-gallery-area gallery-scrollbar">
            {% for block in section.blocks %}
                {% if block.type == 'gallery' %}
                {% liquid 
                    assign link = block.settings.link

                    if link == nil
                        assign link = "javascript:void(0)"
                    endif
                %}
                <a class="gallery-item" href="{{ link }}">
                    <img class="gallery-img" 
                        src="{{ block.settings.img | img_url: '186x' }}" 
                        alt="{{ block.settings.img.alt }}" 
                        loading="lazy"
                    >
                </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>


  
{% schema %}
  {
    "name": "Register - Gallery",
    "settings": [],
    "blocks": [
        {
            "name": "item",
            "type": "gallery",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "img",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Register - Gallery",
            "blocks": [            
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" },
                {"type": "gallery" }
            ]
        }
    ]
  }
{% endschema %}
  
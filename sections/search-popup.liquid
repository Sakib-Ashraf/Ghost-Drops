      <!-- Modal body -->
      <div class="modal-body search-bod container-fluid">
        <form action="" method="get" role="search" class="search-form search-page-form">
         <ul class="search-box">
           <li>    
             <button class="search-btb"><i class="fa fa-search" aria-hidden="true"></i></button></li>
       
       <li> <input type="text"   name="q" value="{{ search.terms | escape }}" placeholder="Search in ghost gear..."></li>
       

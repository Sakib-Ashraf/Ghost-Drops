<section class="five-cr">
  <div class="container-fluid">
 <div class="row">     
{% for block in section.blocks %}
      <div class="col-md-4">
       <img src="{{block.settings.image | img_url:'480x480'}}" alt="" class="shpez" />
        <h5>{{block.settings.heading}}</h5>
        <p>{{block.settings.content}}</p>
      </div>
     {%endfor%}    
    </div>  
  </div></section>  
  
{% schema %}
  {
    "name": "Grew Logo Section",
    "settings": [
        
	],
    "blocks": [  
      {
      "type": "image",
      "name": "image",
      "limit":5,
      "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "480x 480px recommended"
      },
  		{
        "type": "text",
        "id": "heading",
        "label": "Heading"
        },
        {
        "type": "textarea",
        "id": "content",
        "label": "Content"
        }
      ]
     }
    ],

    "presets": [{
      "name": "Grew Logo Section",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}


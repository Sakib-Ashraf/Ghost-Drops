<section class="cann pt-0">
  <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6">
          <div class="max-img mt-two">
            <a href="{{section.settings.btn_link}}"><img src="{{section.settings.img | img_url:'master'}}" alt="born-in-dark" /></a>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="born-content">
            {{section.settings.main_heading}}
            <p>{{section.settings.content}}</p>
            <a href="{{section.settings.btn_link}}" class="primary-btn">{{section.settings.btn_label}}</a>
          </div>
        </div>
      </div>
  </div>
</section>

{% schema %} 
  {
    "name": "Left image right text2",
    "settings": [
        
        {
        "type": "image_picker",
        "id": "img",
        "label": "Image",
        "info": "680 x526px recommended"
        },
        {
        "id":"main_heading",
        "type":"textarea",
        "label":"Heading",
        "default":"<div class='h-outer'><h2>Cannabis <span>that changes everything</span></h2></div>"
        },
        {
        "id":"content",
        "type":"textarea",
        "label":"Content",
        "default":"We're out to change the industry for the better. We curate cannabis that changes opinions, changes stigmas, changes flavours, changes who has a voice and who gets seen. We're out to change it all."
        },
        {
        "id":"btn_label",
        "type":"text",
        "label":"Button text",
        "default":"Our mission, vision, and values"
        },
        {
        "id":"btn_link",
        "type":"url",
        "label":"Button link"
        
        }
	],
    "presets": [{
      "name": "Left image right text2",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}
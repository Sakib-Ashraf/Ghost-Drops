<section class="four-boxes d-none">
  <div class="container-fluid">
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-md-6">
        <div class="gry-bxz"><h4>{{block.settings.heading}}</h4>
          {{block.settings.location}}
          <a href="{{block.settings.btn_link}}" class="white-btn new-hv">{{block.settings.btn_label}}</a>
        </div>
      </div>
      {%endfor%}   
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Team Section",
    "settings": [
        
	],
    "blocks": [  
      {
      "type": "text",
      "name": "text",
      "limit":4,
      "settings": [
        
  		{
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Concentrates"
        },
        {
        "type": "textarea",
        "id": "location",
        "label": "Location",
        "default": "<span>Location:</span><b>Toronto, ON</b>"
        },
        {
        "type": "text",
        "id": "btn_label",
        "label": "Button Label",
        "default": "Join Team"
        },
        {
        "type": "url",
        "id": "btn_link",
        "label": "Team link"
      }
      ]
     }
    ],

    "presets": [{
      "name": "Team Section",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}

<section class="good-sht-slider">
<div class="good-sht">
  {%if section.settings.video ==blank%}
   <img src="{{section.settings.bg_desktop | img_url:'master'}}" alt="" class="w-100 dsk-view" />
  {%endif%}
   <img src="{{section.settings.bg_mobile | img_url:'master'}}" alt="" class="w-100 mob-view" />
  {%if section.settings.video !=blank%}
  	<div class="vid-layer">
      <video class="d-vid" width="100%" autoplay muted loop>
        <source src="{{section.settings.video}}" type="video/mp4">
      </video>
   </div>
  {%endif%}
   <div class="container">
      <div class="caption-two">
         <h1 class="animate__animated animate__fadeInDown" style="animation-delay: 1s;">{{section.settings.main_heading}}</h1>
         <ul class="content-stack-two">
            <li class="animate__animated animate__fadeInDown" style="animation-delay: 2s;">
             {{section.settings.content}}  
            </li>
         </ul>
      </div>
   </div>
   <img src="{{section.settings.img_desktop | img_url:'master'}}" alt="" class="img-group dsk-view slide-bottom" />
   <img src="{{section.settings.img_mobile | img_url:'master'}}" alt="" class="img-group mob-view slide-bottom" />
   <ul class="content-stack-two mob-view">
      <li>
         {{section.settings.content}}
      </li>
   </ul>
</div>
</section>
<div class="wave-img-blk">
  <img src="{{'blk-layer.png' | asset_url}}" class="w-100 resp-img">
</div>

<div class="col-md-4 col-6">
  <div class="t-box">
    <a href="{{product.url}}">
      {% unless product.featured_media == null %}
      <img src="{{ product.featured_media | img_url: '95x95', scale: 2 }}" alt="{{ product.featured_media.alt }}" class="w-100" />
      {% endunless %}
    </a>
    <ul class="pricing clearfix">
      <li><a href="">{{ product.title }}</a></li>
      <li><b>$</b> <span>{{product.price}}</span></li>
    </ul>
  </div>
</div>
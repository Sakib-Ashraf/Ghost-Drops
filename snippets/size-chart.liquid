  $('.schart').click(function(){
     
   if ($('.nav-item.nav-link').hasClass('active')){
     var dim = $('a.dimension.active').attr('data-attr');
   	if(dim=='cm'){
         var r_arm = $('input[name="sizes"]:checked').attr("data-right-arm")*2.54;  
         var l_arm = $('input[name="sizes"]:checked').attr("data-left-arm")*2.54;
         var neck = $('input[name="sizes"]:checked').attr("data-neck")*2.54;
         var r_val= r_arm.toFixed(2);  
         var l_val= l_arm.toFixed(2);
         var l_neck= neck.toFixed(2);
         $('.r_arm').html(r_val  +' cm');  
         $('.l_arm').html(l_val +' cm');
         $('.neck').html(l_neck  +' cm');
        }
        if(dim=='inch'){
         var r_arm = $('input[name="sizes"]:checked').attr("data-right-arm");  
